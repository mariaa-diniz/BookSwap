<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="320.0" prefWidth="450.0" spacing="15.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.PropostaTrocaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="titulo-label" text="Fazer Proposta" />

        <Label fx:id="infoLivroLabel" text="Você está propondo uma troca pelo livro: [Nome do Livro]" textAlignment="CENTER" wrapText="true" />

        <Label text="Selecione um dos seus livros para oferecer em troca:" />

        <ComboBox fx:id="meusLivrosComboBox" prefWidth="400.0" promptText="Escolha um livro..." />

        <Button mnemonicParsing="false" onAction="#handleConfirmarPropostaAction" text="Confirmar Proposta" />

        <Label fx:id="mensagemLabel" />
    </children>
</VBox>