<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.PrincipalController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="tituloPaginaLabel" styleClass="titulo-label" text="Livros Disponíveis">
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
            <content>
                <TilePane fx:id="livrosContainer" alignment="TOP_LEFT" hgap="20.0" prefColumns="4" vgap="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>
    <left>
        <VBox prefWidth="200.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="nomeUsuarioLabel" styleClass="sidebar-user-label" text="Nome do Usuário" />
                <Button mnemonicParsing="false" onAction="#handleInicioAction" styleClass="sidebar-button" text="🏠 Início" />
                <Button mnemonicParsing="false" onAction="#handleMinhasTrocasAction" styleClass="sidebar-button" text="🔁 Minhas Trocas" />
                <Button mnemonicParsing="false" onAction="#handleMeuPerfilAction" styleClass="sidebar-button" text="👤 Meu Perfil" />
                <Button mnemonicParsing="false" onAction="#handleAdicionarLivroAction" text="➕ Adicionar Livro" styleClass="sidebar-button" />
                <VBox VBox.vgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleSairAction" styleClass="sidebar-button" text="🚪 Sair" />
            </children>
        </VBox>
    </left>
</BorderPane>