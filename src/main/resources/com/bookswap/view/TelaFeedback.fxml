<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="450.0" spacing="15.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.FeedbackController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label styleClass="titulo-label" text="Avaliar Troca" />
        <Label fx:id="infoTrocaLabel" text="Avaliando a troca do livro: [Nome do Livro]" textAlignment="CENTER" wrapText="true" />
        <Label text="Sua Nota (1 a 5)" />
        <Slider fx:id="notaSlider" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="4.0" />
        <Label text="Seu Comentário (Opcional)" />
        <TextArea fx:id="comentarioArea" prefHeight="100.0" wrapText="true" />
        <Button mnemonicParsing="false" onAction="#handleEnviarFeedbackAction" text="Enviar Avaliação" />
        <Label fx:id="mensagemLabel" />
    </children>
</VBox>