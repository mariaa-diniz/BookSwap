<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.AdicionarLivroController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleVoltarAction" text="&lt; Voltar" />
                <Label styleClass="titulo-label" text="Adicionar Novo Livro" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" maxWidth="450.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Título do Livro" />
                <TextField fx:id="tituloField" promptText="Ex: O Senhor dos Anéis" />

                <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Autor">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="autorField" promptText="Ex: J.R.R. Tolkien" />

                <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Gênero">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="generoField" promptText="Ex: Fantasia" />

                <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Estado de Conservação">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <ComboBox fx:id="estadoComboBox" prefWidth="450.0" promptText="Selecione o estado do livro" />

                <Button mnemonicParsing="false" onAction="#handleSelecionarImagemAction" prefWidth="200.0" text="Selecionar Imagem da Capa...">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleAdicionarLivroAction" prefHeight="40.0" prefWidth="250.0" text="Adicionar à Minha Estante">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>

                <Label fx:id="mensagemLabel" />
            </children>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>