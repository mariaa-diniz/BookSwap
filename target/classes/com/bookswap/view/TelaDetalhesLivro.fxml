<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.DetalhesLivroController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleVoltarAction" text="&lt; Voltar" />
                <Label styleClass="titulo-label" text="Detalhes do Livro" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="capaImageView" fitHeight="300.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                <VBox alignment="TOP_LEFT" prefWidth="400.0" spacing="15.0">
                    <children>
                        <Label fx:id="tituloLabel" text="Título do Livro" wrapText="true">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="autorLabel" text="por Autor do Livro">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="generoLabel" text="Gênero:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="estadoLabel" text="Estado:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>

                        <Button fx:id="proporTrocaButton" mnemonicParsing="false" onAction="#handleProporTrocaAction" prefHeight="45.0" prefWidth="200.0" text="Tenho Interesse / Propor Troca">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>