<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookswap.controller.PerfilController">
    <top>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleVoltarAction" text="&lt; Voltar" />
                        <Label styleClass="titulo-label" text="Meu Perfil" />
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </HBox>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label fx:id="nomeUsuarioLabel" text="[Nome Completo do UsuÃ¡rio]">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="emailUsuarioLabel" text="[email.do.usuario@email.com]" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox>
            <children>
                <Label text="Minha Estante de Livros">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="meusLivrosContainer" hgap="20.0" vgap="20.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </TilePane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>